{
  "version": 2,
  "builds": [
    {
      "src": "server1.2.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",   // API requests handled by the backend
      "dest": "server1.2.js"
    },
    {
      "src": "/(.*)",       // Non-API requests also routed to the backend
      "dest": "server1.2.js"
    }
  ]
}
